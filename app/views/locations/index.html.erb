<%= render 'layouts/notice' %>

<h2>Locations</h2>

<ul>
  <% if current_user %>
    <% ordered_locations = current_user.locations.order(:name) %>
    <% ordered_locations.each do |location|  %>
      <li>
        <%= link_to "#{location.name}", location_path(location) %>
      </li>
    <% end %>
  <% end %>
</ul>
